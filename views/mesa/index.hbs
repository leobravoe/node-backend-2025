<div class="container">
    <a href="/mesa/create" class="btn btn-primary">Criar Mesa</a>
    <a href="/recurso" class="btn btn-primary">Voltar</a>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>Número</th>
                <th>Estado</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            {{#each mesas}}
            <tr>
                <th>{{this.id}}</th>
                <td>{{this.numero}}</td>
                <td>{{this.estado}}</td>
                <td>
                    <a href="#" class="btn btn-primary">Mostrar</a>
                    <a href="#" class="btn btn-secondary">Editar</a>
                    <a href="#" class="btn btn-danger">Remover</a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>