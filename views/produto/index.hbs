<div class="container">
    <a href="/produto/create" class="btn btn-primary">Criar Produto</a>
    <a href="/recurso" class="btn btn-primary">Voltar</a>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>Tipo</th>
                <th>Nome</th>
                <th>Preço</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            {{#each produtos}}
            <tr>
                <th>{{this.id}}</th>
                <td>{{this.descricao}}</td>
                <td>{{this.nome}}</td>
                <td>{{this.preco}}</td>
                <td>
                    <a href="/produto/{{this.id}}" class="btn btn-primary">Mostrar</a>
                    <a href="#" class="btn btn-secondary">Editar</a>
                    <a href="#" class="btn btn-danger">Remover</a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>